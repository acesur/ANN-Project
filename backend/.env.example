# Environment Configuration for Bank OCR Backend
# Copy this file to .env and update with your actual values

# Application
APP_NAME=Bank OCR System
VERSION=2.0.0
DEBUG=false

# Security - IMPORTANT: Change in production!
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (Your Angular frontend URLs)
CORS_ORIGINS=http://localhost:4200,https://your-frontend-domain.com

# Trusted Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
DATABASE_URL=postgresql://bankocr:bankocr123@localhost:5432/bankocr_db
DATABASE_ECHO=false

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_FORMATS=jpg,jpeg,png
UPLOAD_DIR=uploads
PROCESSED_DIR=processed

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=0.5
OCR_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@bankocr.com

# Model Paths
MODEL_BASE_PATH=models
CHARACTER_MODEL_PATH=models/complete_ocr_character_model.h5
SEQUENCE_MODEL_PATH=models/complete_ocr_sequence_model.h5
DETECTION_MODEL_PATH=models/complete_ocr_detection_model.h5
METADATA_PATH=models/complete_ocr_system_metadata.json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Production Settings (uncomment for production)
# DEBUG=false
# DATABASE_URL=postgresql://username:password@your-db-host:5432/your_db_name
# REDIS_URL=redis://your-redis-host:6379/0
# SECRET_KEY=generate-a-very-secure-random-key-for-production
# CORS_ORIGINS=https://your-frontend-domain.com
# ALLOWED_HOSTS=your-domain.com